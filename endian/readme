             node name = vesta
               release = 12.1-RELEASE-p3
               version = FreeBSD 12.1-RELEASE-p3 GENERIC
               machine = amd64
             page size = 4096
          avail memory = 10328125440
                       = 10086060 kB
                       = 9849 MB
                endian = little endian
 sizeof(unsigned long) = 8
           sizeof(int) = 4
         sizeof(void*) = 8
     fp rounding mode is FE_TONEAREST
-------------------------------------------------------------
